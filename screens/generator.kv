<GeneratorScreen>:
    name: "generator"

    BoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Paper Generator"
            elevation: 4
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]

        FloatLayout:
            MDBoxLayout:
                orientation: "vertical"
                padding: "24dp"
                spacing: "18dp"
                size_hint: 0.9, None
                height: self.minimum_height
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                adaptive_height: True

                MDCard:
                    orientation: "vertical"
                    padding: "24dp"
                    spacing: "16dp"
                    size_hint_y: None
                    height: self.minimum_height
                    elevation: 10
                    radius: [20, 20, 20, 20]
                    md_bg_color: app.theme_cls.bg_dark if app.theme_cls.theme_style == "Dark" else get_color_from_hex("#f0f0f3")

                    MDLabel:
                        text: "Enter Subject Name"
                        font_style: "H6"
                        halign: "center"
                        theme_text_color: "Primary"

                    MDTextField:
                        id: subject_input
                        hint_text: "e.g. economics, computer"
                        mode: "rectangle"
                        size_hint_x: 1
                        helper_text: "Subject name in lowercase"
                        helper_text_mode: "on_focus"

                    MDRaisedButton:
                        text: "Generate Question Paper"
                        md_bg_color: app.theme_cls.primary_color
                        on_release: app.generate_paper()
