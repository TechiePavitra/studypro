<HomeScreen>:
    name: "home"

    BoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "StudyPro"
            elevation: 4
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]
            md_bg_color: app.theme_cls.primary_color

        BoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "20dp"

            Image:
                source: "assets/icon.png"
                size_hint: None, None
                size: "120dp", "120dp"
                pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "Welcome to StudyPro!"
                halign: "center"
                theme_text_color: "Primary"
                font_style: "H5"

            MDLabel:
                text: "Create papers. Import PDFs. All in one place."
                halign: "center"
                theme_text_color: "Secondary"
                font_style: "Subtitle1"
